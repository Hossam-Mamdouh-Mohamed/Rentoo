<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Rentoo Admin</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=Nunito:wght@300;400;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/_Layout.css" />
    <link href="~/css/admin.css" rel="stylesheet" />
</head>
<body>
    <div class="wrapper @(ViewData["SidebarCollapsed"] as bool? == true ? "sidebar-collapsed" : "")">
        <!-- Sidebar -->
        <nav class="sidebar">
            <div class="sidebar-brand">
                <div class="sidebar-brand-text">
                    <i class="fas fa-car"></i>
                    <span>Rentoo Admin</span>
                </div>
            </div>

            <div class="profile-section">
                <img src="~/img/alaaphote.jpg" alt="Profile" class="profile-img" onerror="this.onerror=null;this.src='/images/default-profile.png';" />
                <h6 class="profile-name">Hossam Mamdouh</h6>
                <p class="profile-role">Admin</p>
            </div>

            <ul class="nav flex-column">
                <li class="nav-item">
                    <a class="nav-link @(ViewContext.RouteData.Values["Action"].ToString() == "Index" && ViewContext.RouteData.Values["Controller"].ToString() == "Home" ? "active" : "")" asp-controller="Home" asp-action="Index">
                        <i class="fas fa-home"></i>
                        <span class="nav-link-text">Dashboard</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @(ViewContext.RouteData.Values["Action"].ToString() == "Profile" && ViewContext.RouteData.Values["Controller"].ToString() == "Admin" ? "active" : "")" asp-controller="Admin" asp-action="Profile">
                        <i class="fas fa-user-tie"></i>
                        <span class="nav-link-text">Profile</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @(ViewContext.RouteData.Values["Action"].ToString() == "Clients" ? "active" : "")" asp-controller="Admin" asp-action="Clients">
                        <i class="fas fa-users"></i>
                        <span class="nav-link-text">Clients</span>
                        <span class="badge">5</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @(ViewContext.RouteData.Values["Action"].ToString() == "Owners" ? "active" : "")" asp-controller="Admin" asp-action="Owners">
                        <i class="fas fa-user-tie"></i>
                        <span class="nav-link-text">Owners</span>
                        <span class="badge">12</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @(ViewContext.RouteData.Values["Action"].ToString() == "Cars" ? "active" : "")" asp-controller="Admin" asp-action="Cars">
                        <i class="fas fa-car"></i>
                        <span class="nav-link-text">Cars</span>
                        <span class="badge">42</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @(ViewContext.RouteData.Values["Action"].ToString() == "Rentals" ? "active" : "")" asp-controller="Admin" asp-action="Index">
                        <i class="fas fa-key"></i>
                        <span class="nav-link-text">Rentals</span>
                        <span class="badge">8</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @(ViewContext.RouteData.Values["Action"].ToString() == "PendingRequests" ? "active" : "")" asp-controller="Admin" asp-action="PendingRequests">
                        <i class="fas fa-clock"></i>
                        <span class="nav-link-text">Pending Requests</span>
                        <span class="badge">3</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @(ViewContext.RouteData.Values["Action"].ToString() == "Reports" ? "active" : "")" asp-controller="Reports" asp-action="Index">
                        <i class="fas fa-chart-bar"></i>
                        <span class="nav-link-text">Reports</span>
                    </a>
                </li>
                <li class="nav-item mt-4">
                    <a class="nav-link" asp-controller="Account" asp-action="SignOut">
                        <i class="fas fa-sign-out-alt"></i>
                        <span class="nav-link-text">Logout</span>
                    </a>
                </li>
            </ul>
        </nav>

        <!-- Main Content -->
        <div class="main-content">
            <!-- Top Navigation -->
            <nav class="top-navbar">
                <button class="toggle-sidebar-btn" id="sidebarToggle">
                    <i class="fas fa-bars"></i>
                </button>
                <div class="user-dropdown dropdown">
                    <a class="dropdown-toggle" href="#" role="button" id="userDropdown" data-bs-toggle="dropdown">
                        <img src="~/img/alaaphote.jpg" alt="User" class="user-avatar" onerror="this.onerror=null;this.src='/images/default-profile.png';" />
                        <span>Hossam Mamdouh</span>
                    </a>
                    <ul class="dropdown-menu dropdown-menu-end">
                        <li><a class="dropdown-item" href="/Profile"><i class="fas fa-user"></i> Profile</a></li>
                        <li><a class="dropdown-item" href="/Settings"><i class="fas fa-cog"></i> Settings</a></li>
                        <li><hr class="dropdown-divider"></li>
                        <li><a class="dropdown-item" asp-controller="Account" asp-action="SignOut"><i class="fas fa-sign-out-alt"></i> Logout</a></li>
                    </ul>
                </div>
            </nav>

            <!-- Page Content -->
            <main class="container-fluid py-4">
                @RenderBody()
            </main>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const sidebarToggle = document.getElementById('sidebarToggle');
            const wrapper = document.querySelector('.wrapper');
            const badges = document.querySelectorAll(".badge");
            const body = document.body;
            hidenoity()
            // Function to toggle sidebar
            function toggleSidebar() {
                wrapper.classList.toggle('sidebar-collapsed');

                // Save state in localStorage
                hidenoity()
            }
            function hidenoity(){
                  if (wrapper.classList.contains('sidebar-collapsed')) {
                    localStorage.setItem('sidebarCollapsed', 'true');
                    $(".badge").hide();
                } else {
                    localStorage.removeItem('sidebarCollapsed');
                    $(".badge").show();
                }
            }

            // Add click event listener to toggle button
            sidebarToggle.addEventListener('click', toggleSidebar);

            // Check for saved sidebar state
            if (localStorage.getItem('sidebarCollapsed') === 'true') {
                wrapper.classList.add('sidebar-collapsed');
            }

            // Mobile detection for sidebar
            function checkMobileView() {
                if (window.innerWidth < 992) {
                    // On mobile, sidebar is hidden by default
                    if (localStorage.getItem('sidebarCollapsed') !== 'true') {
                        wrapper.classList.add('sidebar-collapsed');
                    }
                } else {
                    // On desktop, show sidebar unless explicitly collapsed
                    if (localStorage.getItem('sidebarCollapsed') !== 'true') {
                        wrapper.classList.remove('sidebar-collapsed');
                    }
                }
            }

            // Close sidebar when clicking outside on mobile
            document.addEventListener('click', function(event) {
                const isMobile = window.innerWidth < 992;
                const isSidebarOpen = wrapper.classList.contains('sidebar-collapsed');
                const isClickInsideSidebar = event.target.closest('.sidebar');
                const isClickOnToggle = event.target.closest('.toggle-sidebar-btn');

                if (isMobile && isSidebarOpen && !isClickInsideSidebar && !isClickOnToggle) {
                    wrapper.classList.remove('sidebar-collapsed');
                }
            });

            // Initial check
            checkMobileView();

            // Handle window resize
            window.addEventListener('resize', checkMobileView);
        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>