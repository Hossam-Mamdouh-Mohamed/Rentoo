@model Rentoo.Domain.Entities.UserDocument
@using RM = Rentoo.Domain.Shared.Localization.Global;
@{
    ViewData["Title"] = "Review Document";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-5">
    <h2 class="mb-4 text-primary">@RM.Global.lbReviewRenterDocument</h2>

    <div class="card shadow p-4">
        <div class="row">
            <div class="col-md-6">
                <h5>@RM.Global.lbRenter</h5>
                <p>@Model.User?.FirstName @Model.User?.LastName</p>

                <h5>@RM.Global.lbNationalID</h5>
                <p>@Model.NationalIDNumber</p>

                <h5>@RM.Global.lbStatus:</h5>
                <p>@Model.Status</p>

                <h5>@RM.Global.lbReviewedAt:</h5>
                <p>@(Model.ReviewdAt?.ToString("yyyy-MM-dd") ?? "Not Reviewed")</p>
            </div>

            <div class="col-md-6">
                <h5>@RM.Global.lbLicenseImage:</h5>
                <img src="/@Model.LicenseUrl" alt="License" class="img-fluid border mb-4" style="max-width: 100%;" />

                <h5>@RM.Global.lbNationalIDImage:</h5>
                <img src="/@Model.NationalIDUrl" alt="National ID" class="img-fluid border mb-4" style="max-width: 100%;" />
            </div>
        </div>

        <div class="mt-4 d-flex gap-3">
            <form asp-action="UpdateStatus2" method="post">
                <input type="hidden" name="id" value="@Model.ID" />
                <input type="hidden" name="status" value="Accepted" />
                <button type="submit" class="btn btn-success">@RM.Global.lbAccept</button>
            </form>

            <form asp-action="UpdateStatus2" method="post">
                <input type="hidden" name="id" value="@Model.ID" />
                <input type="hidden" name="status" value="Rejected" />
                <button type="submit" class="btn btn-danger">@RM.Global.lbReject</button>
            </form>
        </div>
    </div>
</div>
