@model Rentoo.Domain.Entities.UserDocument

@{
    ViewData["Title"] = "Review Document";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-5">
    <h2 class="mb-4 text-primary">Review Renter Document</h2>

    <div class="card shadow p-4">
        <div class="row">
            <div class="col-md-6">
                <h5>Owner Name:</h5>
                <p>@Model.User?.FirstName @Model.User?.LastName</p>

                <h5>National ID</h5>
                <p>@Model.NationalIDNumber</p>

                <h5>Status:</h5>
                <p>@Model.Status</p>

                <h5>Reviewed At:</h5>
                <p>@(Model.ReviewdAt?.ToString("yyyy-MM-dd") ?? "Not Reviewed")</p>

                @if (!string.IsNullOrWhiteSpace(Model.Notes))
                {
                    @* <h5>Admin Notes:</h5> *@
                    @* <p>@Model.Notes</p> *@
                }

                @if (!string.IsNullOrWhiteSpace(Model.ReviewNotes))
                {
                    <h5>Review Notes:</h5>
                    <p>@Model.ReviewNotes</p>
                }
            </div>

            <div class="col-md-6">
                <h5>License Image:</h5>
                <img src="/@Model.LicenseUrl" alt="License" class="img-fluid border mb-4" style="max-width: 100%;" />

                <h5>National ID Image:</h5>
                <img src="/@Model.NationalIDUrl" alt="National ID" class="img-fluid border mb-4" style="max-width: 100%;" />
            </div>
        </div>

        <div class="mt-4 d-flex gap-3">
            <form asp-action="UpdateStatus2" method="post">
                <input type="hidden" name="id" value="@Model.ID" />
                <input type="hidden" name="status" value="Accepted" />
                <button type="submit" class="btn btn-success">Accept</button>
            </form>

            <form asp-action="UpdateStatus2" method="post">
                <input type="hidden" name="id" value="@Model.ID" />
                <input type="hidden" name="status" value="Rejected" />
                <button type="submit" class="btn btn-danger">Reject</button>
            </form>
        </div>
    </div>
</div>
