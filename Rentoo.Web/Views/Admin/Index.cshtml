@model Rentoo.Web.ViewModels.AdminDashboardViewModel
@using RM = Rentoo.Domain.Shared.Localization.Global;
@{
	ViewData["Title"] = "Admin ";
    Layout = "_AdminLayout";
}

<div class="container-fluid">
    <div class="row">
        <!-- Main content -->
        <main role="main" class="container-fluid px-4">
            <div class="d-flex justify-content-between align-items-center pt-4 pb-3 mb-4 border-bottom">
                <h1 class="h2 text-primary fw-bold">@RM.Global.lbDashboard</h1>
            </div>

            <div class="row g-4">
                <!-- Owners -->
                <div class="col-md-4">
                    <div class="card shadow-sm border-0 bg-light">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <h6 class="card-title text-muted">@RM.Global.lbOwnersCount</h6>
                                    <h3 class="fw-bold">@Model.OwnersCount</h3>
                                </div>
                                <i class="bi bi-person-badge fs-2 text-primary"></i>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Clients -->
                <div class="col-md-4">
                    <div class="card shadow-sm border-0 bg-light">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <h6 class="card-title text-muted">@RM.Global.lbRentersCount</h6>
                                    <h3 class="fw-bold">@Model.RentersCount</h3>
                                </div>
                                <i class="bi bi-people fs-2 text-success"></i>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Cars -->
                <div class="col-md-4">
                    <div class="card shadow-sm border-0 bg-light">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <h6 class="card-title text-muted">@RM.Global.lbCarsCount</h6>
                                    <h3 class="fw-bold">@Model.CarsCount</h3>
                                </div>
                                <i class="bi bi-truck-front fs-2 text-danger"></i>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Rentals -->
                <div class="col-md-4">
                    <div class="card shadow-sm border-0 bg-light">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <h6 class="card-title text-muted">@RM.Global.lbRentelsCount</h6>
                                    <h3 class="fw-bold">@Model.RentalsCount</h3>
                                </div>
                                <i class="bi bi-card-checklist fs-2 text-warning"></i>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Rentals In Progress -->
                <div class="col-md-4">
                    <div class="card shadow-sm border-0 bg-light">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <h6 class="card-title text-muted">@RM.Global.lbCurrentRentels</h6>
                                    <h3 class="fw-bold">@Model.RentalsInProgressCount</h3>
                                </div>
                                <i class="bi bi-clock-history fs-2 text-info"></i>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Rentals Completed -->
                <div class="col-md-4">
                    <div class="card shadow-sm border-0 bg-light">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <h6 class="card-title text-muted">@RM.Global.lbCompletedRent</h6>
                                    <h3 class="fw-bold">@Model.RentalsCompletedCount</h3>
                                </div>
                                <i class="bi bi-check-circle fs-2 text-success"></i>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Rentals Cancelled -->
                <div class="col-md-4">
                    <div class="card shadow-sm border-0 bg-light">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <h6 class="card-title text-muted">@RM.Global.lbcancelledRent</h6>
                                    <h3 class="fw-bold">@Model.RentalsCancelledCount</h3>
                                </div>
                                <i class="bi bi-x-circle fs-2 text-danger"></i>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Rentals Pending -->
                <div class="col-md-4">
                    <div class="card shadow-sm border-0 bg-light">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <h6 class="card-title text-muted">@RM.Global.lbPendingRent</h6>
                                    <h3 class="fw-bold">@Model.RentalsPendingCount</h3>
                                </div>
                                <i class="bi bi-hourglass-split fs-2 text-warning"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </main>

    </div>
</div>
