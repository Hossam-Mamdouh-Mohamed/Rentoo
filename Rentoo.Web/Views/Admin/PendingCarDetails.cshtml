@model Rentoo.Domain.Entities.CarDocument

@{
    ViewData["Title"] = "Review Document";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-5">
    <h2 class="mb-4 text-primary">Review Car Document</h2>

    <div class="card shadow p-4">
        <div class="row">
            <div class="col-md-6">
                <h5>Owner Name:</h5>
                <p>@Model.User?.FirstName @Model.User?.LastName</p>

                <h5>License Number:</h5>
                <p>@Model.LicenseNumber</p>

                <h5>Status:</h5>
                <p>@Model.status</p>

                <h5>Reviewed At:</h5>
                <p>@(Model.ReviewdAt?.ToString("yyyy-MM-dd") ?? "Not Reviewed")</p>
            </div>

            <div class="col-md-6">
                <h5>License Image:</h5>
                <img src="/@Model.LicenseUrl" alt="License" class="img-fluid border mb-4" style="max-width: 100%;" />

                <h5>Car Image:</h5>
                @if (ViewBag.CarImage != null)
                {
                    <img src="/@ViewBag.CarImage" alt="Car Image" class="img-fluid border" style="max-width: 100%;" />
                }
                else
                {
                    <p>No Car Image</p>
                }
            </div>
        </div>

        <div class="mt-4 d-flex gap-3">
            <form asp-action="UpdateStatus" method="post">
                <input type="hidden" name="id" value="@Model.ID" />
                <input type="hidden" name="status" value="Accepted" />
                <button type="submit" class="btn btn-success">Accept</button>
            </form>

            <form asp-action="UpdateStatus" method="post">
                <input type="hidden" name="id" value="@Model.ID" />
                <input type="hidden" name="status" value="Rejected" />
                <button type="submit" class="btn btn-danger">Reject</button>
            </form>
        </div>
    </div>
</div>
