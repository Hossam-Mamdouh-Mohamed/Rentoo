@model web.ViewModels.LoginViewModel
@using RM = Rentoo.Domain.Shared.Localization.Global;
@{
    ViewData["Title"] = "Login";
}

<div class="container py-5" style="min-height: 80vh;">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-body p-5">
                    <h2 class="text-center mb-4 text-primary">@RM.Global.lbLogin</h2>
                    <form asp-action="Login" novalidate>
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="form-group mb-3">
                            <label asp-for="Username" class="form-label">@RM.Global.lbUserName</label>
                            <input asp-for="Username" class="form-control" placeholder="Enter your username" />
                            <span asp-validation-for="Username" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Password" class="form-label">@RM.Global.lbPassword</label>
                            <input asp-for="Password" class="form-control" type="password" placeholder="Enter your password" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <div class="form-check mb-3">
                            <input class="form-check-input" asp-for="RememberMe" />
                            <label class="form-check-label" asp-for="RememberMe">
                                @RM.Global.lbremember
                            </label>
                        </div>


                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary btn-lg">@RM.Global.lbLogin</button>
                        </div>
                    </form>
                </div>
            </div>

            <div class="text-center mt-3">
                <a asp-controller="Account" asp-action="Register" class="text-decoration-none">
                    @RM.Global.lbsignup <strong>@RM.Global.SignUp</strong>
                </a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
